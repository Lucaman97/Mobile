<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/benvenuto"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/clock"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="100dp"
        android:background="#0000"
        android:scaleType="fitCenter"
        android:src="@drawable/clock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/benvenuto" />

    <ImageButton
        android:id="@+id/book"
        android:layout_width="109dp"
        android:layout_height="90dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="100dp"
        android:background="#0000"
        android:scaleType="fitCenter"
        android:src="@drawable/book"
        app:layout_constraintStart_toEndOf="@+id/clock"
        app:layout_constraintTop_toBottomOf="@+id/benvenuto" />

    <ImageButton
        android:id="@+id/www"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="100dp"
        android:background="#0000"
        android:scaleType="fitCenter"
        android:src="@drawable/www"
        app:layout_constraintStart_toEndOf="@+id/book"
        app:layout_constraintTop_toBottomOf="@+id/benvenuto" />

    <ImageButton
        android:id="@+id/settings"
        android:layout_width="109dp"
        android:layout_height="90dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="60dp"
        android:background="#0000"
        android:scaleType="fitCenter"
        android:src="@drawable/settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/www"
        app:layout_constraintTop_toBottomOf="@+id/benvenuto" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Orario"
        android:textColor="#0080ff"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/clock"
        app:layout_constraintStart_toStartOf="@+id/clock"
        app:layout_constraintTop_toBottomOf="@+id/clock" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="I miei appunti"
        android:textColor="#0080ff"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/book"
        app:layout_constraintStart_toStartOf="@+id/book"
        app:layout_constraintTop_toBottomOf="@+id/book" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Appunti condivisi"
        android:textColor="#0080ff"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/www"
        app:layout_constraintStart_toStartOf="@+id/www"
        app:layout_constraintTop_toBottomOf="@+id/www" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Impostazioni"
        android:textColor="#0080ff"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/settings"
        app:layout_constraintStart_toStartOf="@+id/settings"
        app:layout_constraintTop_toBottomOf="@+id/settings" />


</android.support.constraint.ConstraintLayout>