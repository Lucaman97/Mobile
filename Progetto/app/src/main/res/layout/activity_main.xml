<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textBenvenuto"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnClock"
        android:layout_width="111dp"
        android:layout_height="90dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="80dp"
        android:background="#0000"
        android:scaleType="fitCenter"
        android:src="@drawable/clock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBenvenuto" />

    <ImageButton
        android:id="@+id/btnBook"
        android:layout_width="109dp"
        android:layout_height="90dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="60dp"
        android:background="#0000"
        android:scaleType="fitCenter"
        android:src="@drawable/book"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBenvenuto" />

    <ImageButton
        android:id="@+id/btnAppCondivisi"
        android:layout_width="111dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:background="#0000"
        android:scaleType="fitCenter"
        android:src="@drawable/www"
        app:layout_constraintEnd_toEndOf="@+id/btnClock"
        app:layout_constraintStart_toStartOf="@+id/btnClock"
        app:layout_constraintTop_toBottomOf="@+id/textOrario" />

    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="109dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:background="#0000"
        android:scaleType="fitCenter"
        android:src="@drawable/settings"
        app:layout_constraintEnd_toEndOf="@+id/btnBook"
        app:layout_constraintStart_toStartOf="@+id/btnBook"
        app:layout_constraintTop_toBottomOf="@+id/textMieiAppunti" />

    <TextView
        android:id="@+id/textOrario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Orario"
        android:textColor="#0080ff"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btnClock"
        app:layout_constraintStart_toStartOf="@+id/btnClock"
        app:layout_constraintTop_toBottomOf="@+id/btnClock" />

    <TextView
        android:id="@+id/textMieiAppunti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="I miei appunti"
        android:textColor="#0080ff"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btnBook"
        app:layout_constraintStart_toStartOf="@+id/btnBook"
        app:layout_constraintTop_toBottomOf="@+id/btnBook" />

    <TextView
        android:id="@+id/textAppCondivisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Appunti condivisi"
        android:textColor="#0080ff"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btnAppCondivisi"
        app:layout_constraintStart_toStartOf="@+id/btnAppCondivisi"
        app:layout_constraintTop_toBottomOf="@+id/btnAppCondivisi" />

    <TextView
        android:id="@+id/textImpostazioni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Impostazioni"
        android:textColor="#0080ff"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btnSettings"
        app:layout_constraintStart_toStartOf="@+id/btnSettings"
        app:layout_constraintTop_toBottomOf="@+id/btnSettings" />

    <Button
        android:id="@+id/btnDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="vedi db"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>