<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bk"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textBenvenuto"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="56dp"
        android:gravity="center"
        android:textColor="#404040"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnClock"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="77dp"
        android:layout_marginBottom="12dp"
        android:background="#0000"
        android:scaleType="fitCenter"
        android:src="@drawable/calendar"
        app:layout_constraintBottom_toTopOf="@+id/textMieiAppunti"
        app:layout_constraintEnd_toStartOf="@+id/btnBook"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnBook"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="52dp"
        android:background="#0000"
        android:scaleType="fitCenter"
        android:src="@drawable/book"
        app:layout_constraintBottom_toBottomOf="@+id/btnClock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnClock"
        app:layout_constraintTop_toTopOf="@+id/btnClock" />

    <ImageButton
        android:id="@+id/btnAppCondivisi"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="77dp"
        android:layout_marginBottom="12dp"
        android:background="#0000"
        android:scaleType="fitCenter"
        android:src="@drawable/www"
        app:layout_constraintBottom_toTopOf="@+id/textAppCondivisi"
        app:layout_constraintEnd_toStartOf="@+id/btnSettings"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="52dp"
        android:background="#0000"
        android:scaleType="fitCenter"
        android:src="@drawable/settings"
        app:layout_constraintBottom_toBottomOf="@+id/btnAppCondivisi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnAppCondivisi"
        app:layout_constraintTop_toTopOf="@+id/btnAppCondivisi" />

    <TextView
        android:id="@+id/textOrario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="12dp"
        android:text="Orario"
        android:textColor="#404040"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/btnClock"
        app:layout_constraintTop_toBottomOf="@+id/btnClock" />

    <TextView
        android:id="@+id/textMieiAppunti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="68dp"
        android:text="I miei appunti"
        android:textColor="#404040"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnSettings"
        app:layout_constraintEnd_toEndOf="@+id/btnBook" />

    <TextView
        android:id="@+id/textAppCondivisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="50dp"
        android:text="Appunti condivisi"
        android:textColor="#404040"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textImpostazioni"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textImpostazioni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="3dp"
        android:text="Impostazioni"
        android:textColor="#404040"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textAppCondivisi"
        app:layout_constraintTop_toBottomOf="@+id/btnSettings" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="445dp" />


</android.support.constraint.ConstraintLayout>